description "Datadog Agent"

start on started networking
stop on runlevel [!2345]

respawn

console none

script
  exec sudo -u dd-agent <%= install_dir %>/bin/agent/agent start -p <%= install_dir %>/run/agent.pid
end script

post-stop script
 rm -f <%= install_dir %>/run/agent.pid
 rm -f /tmp/agent.sock
end script
