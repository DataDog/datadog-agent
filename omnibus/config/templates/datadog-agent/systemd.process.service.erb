[Unit]
Description="Stackstate Process Agent"
After=network.target stackstate-agent.service
BindsTo=stackstate-agent.service
StartLimitIntervalSec=10
StartLimitBurst=5

[Service]
Type=simple
PIDFile=<%= install_dir %>/run/process-agent.pid
User=sts-agent
Restart=on-failure
ExecStart=<%= install_dir %>/embedded/bin/process-agent --config=<%= etc_dir %>/stackstate.yaml --pid=<%= install_dir %>/run/process-agent.pid

[Install]
WantedBy=multi-user.target
