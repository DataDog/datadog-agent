[Unit]
Description="Datadog Agent"
After=network.target

[Service]
Type=simple
PIDFile=<%= install_dir %>/run/agent.pid
User=dd-agent
Restart=on-failure
StartLimitIntervalSec=10
StartLimitBurst=5
ExecStart=<%= install_dir %>/bin/agent/agent start -p <%= install_dir %>/run/agent.pid

[Install]
WantedBy=multi-user.target
