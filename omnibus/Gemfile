source 'https://rubygems.org'

# Install omnibus
gem 'omnibus', git: 'https://github.com/DataDog/omnibus-ruby.git', branch: 'greg/patch'

# Use Chef's software definitions. It is recommended that you write your own
# software definitions, but you can clone/fork Chef's to get you started.
gem 'omnibus-software', git: 'https://github.com/DataDog/omnibus-software.git', branch: 'master'
