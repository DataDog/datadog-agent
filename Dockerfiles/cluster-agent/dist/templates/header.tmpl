  Hostnames
  =========
  {{- range $name, $value := .metadata.meta -}}
    {{- if and (ne $name "timezones") ($value) }}
    {{$name}}: {{$value}}
    {{- end }}
  {{- end }}
      hostname provider: {{.hostnameStats.provider}}
  {{- range $name, $value := .hostnameStats.errors -}}
    {{- if ne $name "all" }}
    error: {{$name}}: {{$value}}
