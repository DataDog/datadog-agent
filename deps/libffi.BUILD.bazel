copy_file(
    name = "ffitarget_h",
    src = select({
        "@platforms//cpu:aarch64": "src/aarch64/ffitarget.h",
        "@platforms//cpu:x86_64": "src/x86/ffitarget.h",
        "//conditions:default": "@platforms//:incompatible",
    }),
    out = "ffitarget.h",
)

cc_library(
    name = "libffi_include_headers",
    hdrs = [
        "include/ffi_cfi.h",
        "include/ffi_common.h",
        "include/fficonfig.h",
        "include/tramp.h",
    ],
    strip_include_prefix = "include",
    visibility = ["//visibility:private"],
)

cc_library(
    name = "dlmalloc_header",
    hdrs = [
        "src/dlmalloc.c",
    ],
    strip_include_prefix = "src",
    visibility = ["//visibility:private"],
)

cc_library(
    name = "libffi_lib",
    hdrs = [
        ":ffi_h",
        ":fficonfig_h",
        ":ffitarget_h",
    ],
    srcs = [
        "src/closures.c",
        "src/debug.c",
        "src/java_raw_api.c",
        "src/prep_cif.c",
        "src/raw_api.c",
        "src/tramp.c",
        "src/types.c",
    ] + select({
        "@platforms//cpu:aarch64": [
            "src/aarch64/ffi.c",
            "src/aarch64/internal.h",
            "src/aarch64/sysv.S",
        ],
        "@platforms//cpu:x86_64": [
            "src/x86/asmnames.h",
