DEFAULT_XDEFS = with_repo_path({
    "/pkg/collector/python.pythonHome3": "/opt/datadog-agent/embedded",
    "/pkg/config/setup.DefaultPython": "3",
    "/pkg/config/setup.ForceDefaultPython": "true",
})

INSTALL_PATH = "/opt/datadog-agent"

go_binary(
    name = "agent",
    embed = [":agent_lib"],
    gc_linkopts = [
        "-r={}/embedded/lib".format(INSTALL_PATH),  # keep
    ],
    visibility = ["//visibility:public"],
    # keep
    x_defs = select({
        "@rules_go//go/platform:linux": with_repo_path({
            "/pkg/config/setup.InstallPath": INSTALL_PATH,
        }) | DEFAULT_XDEFS,
        "//conditions:default": {},
    }),
)

pkg_tar(
    name = "agent_dist",
    srcs = [
        ":bin_files",
        ":config_files",
    ],
    package_dir = "bin/agent",
)

generate_config(
    name = "datadog_yaml",
    out = "datadog.yaml",
    build_type = "agent-py3",
)

pkg_files(
    name = "config_files",
    srcs = [":datadog_yaml"] + glob(["dist/conf.d/%s.d/**" % check for check in AGENT_CORECHECKS]),
    renames = {
        ":datadog_yaml": "dist/datadog.yaml",
    },
    strip_prefix = strip_prefix.from_pkg(),
)

pkg_files(
    name = "bin_files",
    srcs = [
        "dist/dd-agent",
        ":agent",
    ],
    attributes = pkg_attributes(
