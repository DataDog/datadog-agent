load("@rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "host-profiler_lib",
    srcs = ["main.go"],
    importpath = "github.com/DataDog/datadog-agent/cmd/host-profiler",
    visibility = ["//visibility:private"],
    deps = select({
        "@rules_go//go/platform:android": [
            "//cmd/host-profiler/command",
            "//cmd/internal/runcmd",
            "//pkg/util/flavor",
            "//pkg/version",
        ],
        "@rules_go//go/platform:linux": [
            "//cmd/host-profiler/command",
            "//cmd/internal/runcmd",
            "//pkg/util/flavor",
            "//pkg/version",
        ],
        "//conditions:default": [],
    }),
)

go_binary(
    name = "host-profiler",
    embed = [":host-profiler_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "host-profiler_test",
    srcs = ["dist_test.go"],
    embed = [":host-profiler_lib"],
    embedsrcs = select({
        "@rules_go//go/platform:android": [
            "dist/host-profiler-config.yaml",
        ],
        "@rules_go//go/platform:linux": [
            "dist/host-profiler-config.yaml",
        ],
        "//conditions:default": [],
    }),
    deps = select({
        "@rules_go//go/platform:android": [
            "@com_github_stretchr_testify//require",
        ],
        "@rules_go//go/platform:linux": [
            "@com_github_stretchr_testify//require",
        ],
        "//conditions:default": [],
    }),
)
