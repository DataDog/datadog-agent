{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "file.schema.json",
    "type": "object",
    "properties": {
        "path": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "inode": {
            "type": "integer",
            "format": "ValidInode"
        },
        "mode": {
            "type": "integer"
        },
        "mount_id": {
            "type": "integer"
        },
        "filesystem": {
            "type": "string"
        },
        "user": {
            "type": "string"
        },
        "group": {
            "type": "string"
        },
        "modification_time": {
            "$ref": "datetime.schema.json"
        },
        "change_time": {
            "$ref": "datetime.schema.json"
        },
        "flags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "mount_path": {
            "type": "string"
        },
        "mount_source": {
            "type": "string",
            "enum": ["device", "mount_id", "snapshot"]
        },
        "mount_origin": {
            "type": "string",
            "enum": ["procfs", "event", "unshare"]
        }
    },
    "required": [
        "path",
        "name",
        "inode",
        "mode",
        "mount_id",
        "filesystem",
        "modification_time",
        "change_time"
    ]
}
