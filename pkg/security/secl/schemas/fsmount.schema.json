{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "mount.schema.json",
    "type": "object",
    "anyOf": [
        {
            "$ref": "container_event.schema.json"
        },
        {
            "$ref": "host_event.schema.json"
        }
    ],
    "allOf": [
        {
            "properties": {
                "mount": {
                    "type": "object",
                    "required": [
                        "fd",
                        "mount_id",
                        "flags",
                        "mount_attrs",
                        "retval"
                    ],
                    "properties": {
                        "fd": {
                            "type": "integer"
                        },
                        "mount_id": {
                            "type": "integer"
                        },
                        "flags": {
                            "type": "integer"
                        },
                        "mount_attrs": {
                            "type": "integer"
                        },
                        "retval": {
                            "type": "integer"
                        }
                    }
                }
            },
            "required": [
                "fsmount"
            ]
        }
    ]
}
