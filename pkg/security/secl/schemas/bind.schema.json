{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "bind.schema.json",
    "type": "object",
    "allOf": [
        {
            "$ref": "event.schema.json"
        },
        {
            "$ref": "usr.schema.json"
        },
        {
            "$ref": "process_context.schema.json"
        },
        {
            "date": {
                "$ref": "datetime.schema.json"
            }
        },
        {
            "properties": {
                "bind": {
                    "type": "object",
                    "required": [
                        "addr"
                    ],
                    "properties": {
                        "addr": {
                            "type": "object",
                            "required": [
                                "family",
                                "ip",
                                "port"
                            ],
                            "properties": {
                                "family": {
                                    "type": "string"
                                },
                                "ip": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}
