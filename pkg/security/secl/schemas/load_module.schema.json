{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "load_module.schema.json",
    "type": "object",
    "anyOf": [
        {
            "$ref": "container_event.schema.json"
        },
        {
            "$ref": "host_event.schema.json"
        }
    ],
    "allOf": [
        {
            "properties": {
                "module": {
                    "type": "object",
                    "required": [
                        "name",
                        "loaded_from_memory"
                    ],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "loaded_from_memory": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    ]
}
