{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "heartbeat.schema.json",
    "type": "object",
    "properties": {
        "policy": {
            "items": {
                "$ref": "#/$defs/policy"
            }
        },
        "date": {
            "$ref": "datetime.schema.json"
        }
    },
    "required": [
        "policy",
        "date"
    ],
    "$defs": {
        "policy": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string",
                    "enum": [
                        "file",
                        "remote-config"
                    ]
                },
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "source",
                "name",
                "version"
            ]
        }
    }
}
