{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "heartbeat.json",
    "type": "object",
    "properties": {
        "policy": {
            "items": {
                "$ref": "#/$defs/policy"
            }
        },
        "date": {
            "$ref": "/schemas/datetime.json"
        }
    },
    "required": [
        "policy",
        "date"
    ],
    "$defs": {
        "policy": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string",
                    "enum": [
                        "file",
                        "remote-config"
                    ]
                },
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/rule"
                    }
                }
            },
            "required": [
                "source",
                "name",
                "version",
                "rules"
            ]
        },
        "rule": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "expression": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "loaded",
                        "agent_version_error",
                        "event_type_disabled",
                        "syntax_error",
                        "error"
                    ]
                },
                "message": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "status",
                "expression"
            ]
        }
    }
}
