{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "event.json",
    "type": "object",
    "properties": {
        "evt": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "outcome": {
                    "type": "string"
                },
                "async": {
                    "type": "boolean"
                }
            },
            "required": [
                "name",
                "category",
                "outcome"
            ]
        },
        "date": {
            "$ref": "/schemas/datetime.json"
        }
    },
    "required": [
        "evt",
        "date"
    ]
}
