# ============================================================================
# Headers
# ============================================================================

filegroup(
    name = "dd_discovery_headers",
    srcs = ["include/dd_discovery.h"],
    visibility = ["//visibility:public"],
)

# ============================================================================
# Binary Targets
# ============================================================================

# Main sd-agent service binary
rust_binary(
    name = "sd-agent",
    srcs = [
        "src/cli.rs",
        "src/config.rs",
        "src/main.rs",
    ],
    edition = "2024",
    visibility = ["//visibility:public"],
    deps = [
        ":dd_discovery",
        "@sdagent_crates//:anyhow",
        "@sdagent_crates//:http-body-util",
        "@sdagent_crates//:hyper",
        "@sdagent_crates//:hyper-util",
        "@sdagent_crates//:log",
        "@sdagent_crates//:phf",
        "@sdagent_crates//:serde_json",
        "@sdagent_crates//:simple_logger",
        "@sdagent_crates//:tokio",
        "@sdagent_crates//:uzers",
        "@sdagent_crates//:yaml-rust2",
    ],
)

pkg_files(
    name = "sd-agent_pkg",
    srcs = [":sd-agent"],
    attributes = pkg_attributes(
        mode = "0755",
    ),
)

pkg_install(
    name = "install",
    srcs = [":sd-agent_pkg"],
)

# Disco CLI tool for service discovery
rust_binary(
    name = "disco",
    srcs = ["src/bin/disco.rs"],
    edition = "2024",
    visibility = ["//visibility:public"],
    deps = [
        ":dd_discovery",
        "@sdagent_crates//:clap",
        "@sdagent_crates//:serde_json",
    ],
)

# ============================================================================
# Tests
# ============================================================================

# Test data files
filegroup(
    name = "testdata",
    srcs = glob(["testdata/**/*"]),
)

filegroup(
    name = "mock_system_probe",
    srcs = ["testdata/fallback/mock-system-probe.sh"],
)

# Unit tests embedded in source files
rust_test(
    name = "dd_discovery_test",
    crate = ":dd_discovery",
    # Make test data available to tests
    data = [":testdata"],
    edition = "2024",
    deps = [
        # Dev dependencies from Cargo.toml
        "@sdagent_crates//:dircpy",
        "@sdagent_crates//:memmap2",
        "@sdagent_crates//:scopeguard",
        "@sdagent_crates//:tempfile",
        "@sdagent_crates//:temp-env",
    ],
)

# Integration tests
rust_test(
    name = "fallback_integration_test",
    srcs = ["tests/fallback_integration_test.rs"],
    data = [
        ":mock_system_probe",
        ":sd-agent",
    ],
    edition = "2024",
    # Set compile-time environment variable pointing to sd-agent binary
    # This mimics Cargo's CARGO_BIN_EXE_* behavior
    rustc_env = {
        "CARGO_BIN_EXE_sd-agent": "$(rootpath :sd-agent)",
        "MOCK_SYSTEM_PROBE": "$(rootpath :mock_system_probe)",
    },
    deps = [
        "@sdagent_crates//:nix",
        "@sdagent_crates//:tempfile",
    ],
)

rust_test(
    name = "pid_integration_test",
    srcs = ["tests/pid_integration_test.rs"],
    data = [":sd-agent"],
    edition = "2024",
    rustc_env = {
        "CARGO_BIN_EXE_sd-agent": "$(rootpath :sd-agent)",
    },
    deps = [
        "@sdagent_crates//:nix",
        "@sdagent_crates//:tempfile",
    ],
)
