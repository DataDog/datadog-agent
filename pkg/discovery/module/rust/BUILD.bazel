    edition = "2024",
    target_compatible_with = [
        "@platforms//os:linux",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@sdagent_crates//:anyhow",
        "@sdagent_crates//:cap-std",
        "@sdagent_crates//:clap",
        "@sdagent_crates//:elf",
        "@sdagent_crates//:glob-match",
        "@sdagent_crates//:http-body-util",
        "@sdagent_crates//:hyper",
        "@sdagent_crates//:hyper-util",
        "@sdagent_crates//:log",
        "@sdagent_crates//:lru",
        "@sdagent_crates//:memchr",
        "@sdagent_crates//:nom",
        "@sdagent_crates//:normalize-path",
        "@sdagent_crates//:phf",
        "@sdagent_crates//:quick-xml",
        "@sdagent_crates//:rmp-serde",
        "@sdagent_crates//:serde",
        "@sdagent_crates//:serde_json",
        "@sdagent_crates//:simple_logger",
        "@sdagent_crates//:thiserror",
        "@sdagent_crates//:tokio",
        "@sdagent_crates//:uzers",
        "@sdagent_crates//:walkdir",
        "@sdagent_crates//:yaml-rust2",
        "@sdagent_crates//:zip",
    ],
)

