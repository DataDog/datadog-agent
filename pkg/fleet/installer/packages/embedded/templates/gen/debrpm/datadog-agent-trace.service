[Unit]
Description=Datadog Trace Agent (APM)
After=datadog-agent.service datadog-agent-exp.service
BindsTo=datadog-agent.service
Conflicts=datadog-agent-exp.service datadog-agent-trace-exp.service

[Service]
Type=simple
PIDFile=/opt/datadog-agent/run/trace-agent.pid
User=dd-agent
Restart=on-failure
EnvironmentFile=-/etc/datadog-agent/environment
Environment="DD_FLEET_POLICIES_DIR=/etc/datadog-agent/managed/datadog-agent/stable"
ExecStart=/opt/datadog-agent/embedded/bin/trace-agent --config /etc/datadog-agent/datadog.yaml --pidfile /opt/datadog-agent/run/trace-agent.pid
StartLimitInterval=10
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
