description: Datadog Distribution of OpenTelemetry Collector
command: {{.InstallDir}}/ext/ddot/embedded/bin/otel-agent
args:
  - run
  - --config
  - {{.EtcDir}}/otel-config.yaml
  - --core-config
  - {{.EtcDir}}/datadog.yaml
  - --pidfile
  - {{.PIDDir}}/run/otel-agent.pid
auto_start: true
condition_path_exists: {{.InstallDir}}/ext/ddot/embedded/bin/otel-agent
restart: on-failure
restart_sec: 2
start_limit_interval_sec: 10
start_limit_burst: 5
environment_file: {{.EtcDir}}/environment
env:
  DD_FLEET_POLICIES_DIR: {{.FleetPoliciesDir}}
stdout: inherit
stderr: inherit
