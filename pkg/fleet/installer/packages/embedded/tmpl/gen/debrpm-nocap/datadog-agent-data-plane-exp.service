[Unit]
Description=Datadog Agent Data Plane Experiment
After=datadog-agent.service datadog-agent-exp.service
BindsTo=datadog-agent-exp.service
Conflicts=datadog-agent.service datadog-agent-data-plane.service

[Service]
Type=simple
PIDFile=/opt/datadog-agent/run/agent-data-plane.pid
User=dd-agent
Restart=on-failure
EnvironmentFile=-/etc/datadog-agent-exp/environment
Environment="DD_FLEET_POLICIES_DIR=/etc/datadog-agent/managed/datadog-agent/experiment"
ExecStart=/opt/datadog-agent/embedded/bin/agent-data-plane run --config /etc/datadog-agent-exp/datadog.yaml --pidfile /opt/datadog-agent/run/agent-data-plane.pid
StartLimitInterval=10
StartLimitBurst=5
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target
