Forwarder
=========
{{ if .Transactions }}
  {{- range $key, $value := .Transactions }}
    {{- if and (ne $key "Errors") (ne $key "ErrorsByType")}}
  {{$key}}: {{humanize $value}}
    {{- end}}
  {{- end}}
  {{- if .Transactions.DroppedOnInput }}

  Warning: the forwarder dropped transactions because all workers were busy.
  You should review your network performance, and tune the forwarder_num_workers
  and forwarder_timeout options.
  {{- end}}
  {{- if .Transactions.Errors }}

  Transaction Errors
  ==================
    Errors: {{.Transactions.Errors}}
    Errors By Type:
          {{- range $type, $count := .Transactions.ErrorsByType }}
            {{- if and (ne $type "HTTPErrorsByCode") ($count) }}
      {{$type}}: {{$count}}
            {{- end}}
          {{- end}}
      {{- if .Transactions.ErrorsByType.HTTPErrorsByCode }}
      HTTP Errors By Code:
          {{- range $code, $count := .Transactions.ErrorsByType.HTTPErrorsByCode }}
        {{$code}}: {{$count}}
          {{- end}}
      {{- end}}
  {{- end}}
{{- end}}

{{- if .APIKeyStatus }}

  API Keys status
  ===============
  {{- range $key, $value := .APIKeyStatus }}
    {{$key}}: {{$value}}
  {{- end }}
{{- end}}

