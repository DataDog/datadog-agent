load("@rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "ebpf",
    srcs = [
        "co_re_unsupported.go",
        "common.go",
        "config.go",
        "debug_handlers.go",
        "ksyms.go",
        "lockcontention_noop.go",
        "mappings.go",
        "preprocess.go",
        "time.go",
        "types_linux.go",
    ],
    cgo = True,
    importpath = "github.com/DataDog/datadog-agent/pkg/ebpf",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/config/setup",
        "//pkg/config/utils",
        "//pkg/ebpf/bytecode",
        "//pkg/process/util",
        "//pkg/system-probe/config",
        "//pkg/util/kernel",
        "@com_github_prometheus_client_golang//prometheus",
    ] + select({
        "@rules_go//go/platform:android": [
            "@com_github_cilium_ebpf//:ebpf",
            "@com_github_datadog_ebpf_manager//:ebpf-manager",
            "@org_golang_x_sys//unix",
        ],
        "@rules_go//go/platform:linux": [
            "@com_github_cilium_ebpf//:ebpf",
            "@com_github_datadog_ebpf_manager//:ebpf-manager",
            "@org_golang_x_sys//unix",
        ],
        "//conditions:default": [],
    }),
)

go_test(
    name = "ebpf_test",
    srcs = [
        "ksyms_test.go",
        "time_test.go",
        "types_linux_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":ebpf"],
    deps = [
        "@com_github_stretchr_testify//assert",
    ] + select({
        "@rules_go//go/platform:android": [
            "//pkg/ebpf/ebpftest",
            "@com_github_stretchr_testify//require",
        ],
        "@rules_go//go/platform:linux": [
            "//pkg/ebpf/ebpftest",
            "@com_github_stretchr_testify//require",
        ],
        "//conditions:default": [],
    }),
)
