<Include>
  <Dialog Id="ErrorModalDlg" Width="270" Height="105" Title="!(loc.ErrorModalDialog_Title)">

    <Control Id="Text" Type="Text" X="48" Y="15" Width="210" Height="60" 
        Text="[ErrorModal_ErrorMessage]" />

    <Control Id="OK" Type="PushButton" X="100" Y="80" Width="56" 
        Height="17" Default="yes" Cancel="yes" Text="!(loc.WixUIOK)">
        <Publish Event="EndDialog" Value="Return">1</Publish>
    </Control>

    <Control Id="Icon" Type="Icon" X="15" Y="15" Width="24" Height="24" 
        FixedSize="yes" IconSize="32" Text="WixUI_Ico_Exclam" />

  </Dialog>
</Include>
