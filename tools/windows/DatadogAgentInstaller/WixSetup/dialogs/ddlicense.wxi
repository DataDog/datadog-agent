<Include xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Dialog Id="ddLicenseAgreementDlg" Width="370" Height="270" Title="!(loc.LicenseAgreementDlg_Title)">
    <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.LicenseAgreementDlgBannerBitmap)" />
    <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
    <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
    <Control Id="Description" Type="Text" X="25" Y="23" Width="340" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.LicenseAgreementDlgDescription)" />
    <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.LicenseAgreementDlgTitle)" />
    <Control Id="LicenseAcceptedCheckBox" Type="CheckBox" X="20" Y="212" Width="330" Height="18" CheckBoxValue="1" Property="LicenseAccepted" Text="!(loc.LicenseAgreementDlgLicenseAcceptedCheckBox)" />
    <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
    <!-- WiX 5: Control Condition element replaced with EnableCondition/DisableCondition attributes -->
    <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)"
             DisableCondition="LicenseAccepted &lt;&gt; &quot;1&quot;"
             EnableCondition="LicenseAccepted = &quot;1&quot;">
        <!-- WiX 5: Publish condition moved to attribute -->
        <Publish Event="SpawnWaitDialog" Value="WaitForCostingDlg" Condition="!(wix.WixUICostingPopupOptOut) OR CostingComplete = 1" />
    </Control>
    <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
        <!-- WiX 5: Publish condition moved to attribute -->
        <Publish Event="SpawnDialog" Value="CancelDlg" Condition="1" />
    </Control>
    <!-- WiX 5: Text inner text moved to Value attribute -->
    <Control Id="SubLicenseBanner" Type="Hyperlink" X="20" Y="52" Width="330" Height="40" >
      <Text Value="!(loc.LicenseAgreementSubHeader)" />
    </Control>
  </Dialog>
</Include>
