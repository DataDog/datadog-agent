<Include xmlns="http://wixtoolset.org/schemas/v4/wxs">
	<Dialog Id="Custom_FatalError" Width="370" Height="270" Title="!(loc.FatalError_Title)">
		<Control Id="Finish" Type="PushButton" X="304" Y="243" Width="56" Height="17" Default="yes" Cancel="yes" Text="!(loc.WixUIFinish)">
			<!-- WiX 5: Condition moved to attribute -->
			<Publish Event="EndDialog" Value="Exit" Condition="1" />
		</Control>
		<Control Id="OpenMsiLog" Type="PushButton" X="20" Y="243" Width="56" Height="17" Disabled="no" Text="!(loc.FatalErrorDialog_ViewLog)" />
		<!-- WiX 5: Control Condition element replaced with HideCondition attribute -->
    <Control Id="SendFlare" Type="PushButton" X="88" Y="243" Width="56" Height="17" Disabled="no" Text="!(loc.FatalErrorDialog_SendFlare)" HideCondition="HIDE_FLARE" />
		<Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="234" TabSkip="no" Text="!(loc.FatalErrorBitmap)" />
		<Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
		<Control Id="Title" Type="Text" X="135" Y="20" Width="220" Height="60" Transparent="yes" NoPrefix="yes" Text="!(loc.FatalErrorTitle)" />
		<Control Id="Description" Type="Text" X="135" Y="60" Width="220" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.FatalErrorDescription1)" />
		<Control Id="ViewLogDescription" Type="Text" X="135" Y="100" Width="220" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.FatalErrorDialog_ViewLogDescription)" />
		<Control Id="FinishDescription" Type="Text" X="135" Y="150" Width="220" Height="20" Transparent="yes" NoPrefix="yes" Text="!(loc.FatalErrorDescription2)" />
	</Dialog>

	<InstallUISequence>
		<!-- WiX 5: Condition moved to attribute -->
		<Show Dialog="Custom_FatalError" OnExit="error" Overridable="yes" Condition="NOT SKIP_ERROR_DIALOG" />
	</InstallUISequence>

	<AdminUISequence>
		<!-- WiX 5: Condition moved to attribute -->
		<Show Dialog="Custom_FatalError" OnExit="error" Overridable="yes" Condition="NOT SKIP_ERROR_DIALOG" />
	</AdminUISequence>
</Include>
