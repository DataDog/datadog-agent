{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "process_context.json",
    "type": "object",
    "properties": {
        "process": {
            "allOf": [
                {
                    "$ref": "process.json"
                },
                {
                    "properties": {
                        "parent": {
                            "$ref": "process.json"
                        },
                        "ancestors": {
                            "type": "array",
                            "items": {
                                "$ref": "process.json"
                            }
                        },
                        "container": {
                            "$ref": "container.json"
                        }
                    },
                    "required": [
                        "parent",
                        "ancestors"
                    ]
                }
            ]
        }
    },
    "required": [
        "process"
    ]
}
