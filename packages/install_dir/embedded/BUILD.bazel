load("@rules_pkg//pkg:install.bzl", "pkg_install")
load("@rules_pkg//pkg:mappings.bzl", "pkg_attributes", "pkg_filegroup", "pkg_files")

package(default_visibility = ["//packages:__subpackages__"])

pkg_files(
    name = "etc_readme",
    srcs = [":etc/README.md"],
    attributes = pkg_attributes("0644"),
    prefix = "embedded/etc",
)

pkg_filegroup(
    name = "all_files",
    srcs = [
        "etc_readme",
    ],
)

pkg_install(
    name = "install",
    srcs = [
        ":all_files",
    ],
)
