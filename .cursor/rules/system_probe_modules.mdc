func (s *myCheckTestSuite) getTracer() *Tracer {
    t := s.T()
    cfg := ebpf.NewConfig()
    tracer, err := NewTracer(cfg)
    require.NoError(t, err)
    t.Cleanup(tracer.Close)
    return tracer
}

